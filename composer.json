{
    "name": "tobozo/arduino-libraries-tooter",
    "description": "PHP cron-bot specialized in publishing changes from arduino-library-manager index to 🐘 Mastodon network ",
    "keywords": [
        "arduino",
        "arduino-libraries",
        "library-manager",
        "mastodon",
        "fediverse",
        "bot",
        "activitypub"
    ],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "tobozo",
            "email": "tobozo@noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "halaxa/json-machine": "^1.1",
        "eleirbag89/mastodonbotphp": "^0.1.0",
        "vlucas/phpdotenv": "^5.5",
        "composer/semver": "^3.4"
    },
    "require-dev": {
        "symplify/vendor-patches": "^11.2"
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "patches": {
            "eleirbag89/mastodonbotphp": [
                "patches/eleirbag89-mastodonbotphp-mastodon-php.patch"
            ]
        }
    }
}
